{
  "compilerOptions": {
    "strict": true,
    "allowUnusedLabels": false,
    "allowUnreachableCode": false,
    "exactOptionalPropertyTypes": false,
    "noFallthroughCasesInSwitch": true,
    "noImplicitOverride": true,
    "noImplicitReturns": true,
    "noPropertyAccessFromIndexSignature": true,
    "noUncheckedIndexedAccess": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "isolatedModules": true,
    "checkJs": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "lib": ["es2023"],
    "module": "node16",
    "target": "es2022",
    "moduleResolution": "node16",
    "outDir": "./dist"
  },
  "files": [
    "./src/app.ts",
    "./src/index.ts",
    "./src/utils.ts",
    "./src/controllers/healthController.ts",
    "./src/controllers/usersController.ts",
    "./src/middlewares/cors.ts",
    "./src/middlewares/errorHandler.ts",
    "./src/middlewares/logger.ts",
    "./src/models/prisma.ts",
    "./src/models/users.ts",
    "./src/services/usersService.ts",
    "./src/types/env.d.ts",
    "./src/types/aspida/$api.ts",
    "./src/types/aspida/@types/index.ts",
    "./src/types/aspida/health/index.ts",
    "./src/types/aspida/users/index.ts",
    "./src/types/aspida/users/_userId@string/index.ts",
    "./src/types/zod/generated/index.ts",
    "./tests/test.ts",
    "./tests/models/users.ts",
    "./tests/services/usersService.test.ts"
  ],
  "include": ["src/**/*", "tests/**/*"],
  "exclude": ["dist"]
}
